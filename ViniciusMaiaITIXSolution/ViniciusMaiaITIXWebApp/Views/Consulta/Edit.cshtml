@model ViniciusMaiaITIXWebApp.Models.Consulta

@{
    ViewBag.Title = "Consulta";
}

<script>
    var consulta = @Html.Raw(Json.Encode(Model));
</script>

<h2>Consulta</h2>
<div ng-controller="consultaController" style="margin-top: 30px;">
    <form name="EditForm">
        <input type="hidden" name="Id" value="{{Id}}"/>
        <div class="row">
            <input type="submit" class="btn btn-success" ng-click="salvaConsulta()" value="Salvar" />
            @Html.ActionLink("Voltar para lista", "List", null, new { @class = "btn btn-primary" })
        </div>
        <div class="form-group" style="margin-top: 20px;">
            <label for="inputPaciente">Paciente</label>
            <select data-ng-model="Paciente" data-ng-options="p as p.Nome for p in ListaPacientes" class="form-control">
                <option value="">Selecione o paciente</option>
            </select>
        </div>
        <div class="form-group">
            <label for="inputDataHoraInicio">Data/Hora Início</label>
            <input type="datetime-local" class="form-control" id="inputDataHoraInicio" ng-model="DataHoraInicio"/>
        </div>
        <div class="form-group">
            <label for="inputDataHoraFim">Data/Hora Fim</label>
            <input type="datetime-local" class="form-control" id="inputDataHoraFim" ng-model="DataHoraFim" />
        </div>
        <div class="form-group">
            <label for="inputObservacoes">Observações</label>
            <textarea rows="4" id="inputObservacoes" class="form-control" ng-model="Observacoes"></textarea>
        </div>
    </form>
</div>

@section scripts{
    <script src="~/AngularApp/webapp.js"></script>
    <script src="~/AngularApp/Consulta/consultaService.js"></script>
    <script src="~/AngularApp/Consulta/consultaController.js"></script>
}

