@model ViniciusMaiaITIXWebApp.Models.Paciente

@{
    ViewBag.Title = "Paciente";
}

<script>
    var paciente = @Html.Raw(Json.Encode(Model));
</script>

<h2>Paciente</h2>
<div ng-controller="pacienteController" style="margin-top: 30px;">
    <form name="EditForm">
        <input type="hidden" name="Id" value="{{Id}}"/>
        <div class="row">
            <input type="submit" class="btn btn-success" ng-click="salvaPaciente()" value="Salvar" />
            @Html.ActionLink("Cancelar", "List", null, new { @class = "btn btn-danger" })
        </div>
        <div ng-repeat="mensagemDeErro in mensagensDeErro" class="alert alert-danger fade in alert-dismissible" style="margin-top: 15px;">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            <strong>{{mensagemDeErro}}</strong>
        </div>
        <div class="form-group" style="margin-top: 20px;">
            <label for="inputNome">Nome</label>
            <input type="text" class="form-control" id="inputNome" ng-model="Nome" />
        </div>
        <div class="form-group">
            <label for="inputNome">Data de Nascimento</label>
            <input type="date" class="form-control" id="inputDataNascimento" ng-model="DataNascimento"/>
        </div>
    </form>
</div>

@section scripts{
    <script src="~/AngularApp/webapp.js"></script>
    <script src="~/AngularApp/Paciente/pacienteService.js"></script>
    <script src="~/AngularApp/Paciente/pacienteController.js"></script>
}

